<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/start_game_btn"
        android:layout_alignLeft="@+id/how_to_play_btn"
        android:layout_alignStart="@+id/how_to_play_btn"
        android:layout_alignRight="@+id/how_to_play_btn"
        android:layout_alignEnd="@+id/how_to_play_btn"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom = "5dp"
        android:layout_centerVertical="true"
        android:typeface="serif"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/how_to_play_btn"
        android:text="      How to Play      "
        android:background="@drawable/rounded_button"
        android:layout_marginBottom = "5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/start_game_btn"
        android:typeface="serif"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_us_btn"
        android:text="About us"
        android:layout_alignLeft="@+id/how_to_play_btn"
        android:layout_alignStart="@+id/how_to_play_btn"
        android:layout_alignRight="@+id/how_to_play_btn"
        android:layout_alignEnd="@+id/how_to_play_btn"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/how_to_play_btn"
        android:typeface="serif"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/logo"
        android:layout_above="@+id/start_game_btn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>